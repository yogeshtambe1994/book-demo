<h1>Listing books</h1>

<%= link_to 'New book', new_book_path %>
<table class="table">
  <tr>
  	<th>Book Id</th>
    <th>Title</th>
    <th>Author ID</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
 
  <% @books.each do |book| %>
    <tr>
      <td><%= book.id %></td>
      <td><%= book.title %></td>
      <td><%= book.author_ids if book.author_ids.any? %></td>
      <td><%= link_to 'Show', book_path(book), style: 'color:#000066;' %></td>
      <td><%= link_to 'Edit', edit_book_path(book), style: 'color:#000066;' %></td>
      <td><%= link_to 'Delete', book_path(book), style: 'color:#000066;', method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>